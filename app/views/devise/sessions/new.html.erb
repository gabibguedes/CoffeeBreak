<body class = "unique">
  <div class="container">
      <%= devise_error_messages! %>
  </div>
<div class="border-form-div card card-login mx-auto mt-5">
  <h2>Login</h2>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.email_field :email, :autofocus => true, :placeholder => 'Email' %>
    <%= f.password_field :password, :placeholder => 'Senha' %>
    <br>
    <br>
    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
    </div>
    <br>
    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :lembrar_de_mim%>
      </div>
    <% end -%>

  <% end %>
  <h3><%= link_to "Não é cadastrado?", cadastrar_path(@projeto), class: "d-block small mt-3 text-center"%></h3>
</div>
</div>
</body>
