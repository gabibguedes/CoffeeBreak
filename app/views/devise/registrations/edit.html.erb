
<body class="bg-dark">
  <div class="container">
    <div class="card card-login mx-auto mt-5">
      <div class="card-header">Novo Usuario</div>
        <div class="card-body">

              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= devise_error_messages! %>
              <br>
              <div class="field">
                <%= f.label :nome %>
                <%= f.text_field :nome, autofocus: true %>
              </div>
              <br>
              <div class="field">
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true %>
              </div>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>
              <br>
              <div class="field">
                <%= f.label :nova_senha %></i><br>
                <%= f.password_field :password, autocomplete: "off" %>
              </div>

              <div class="field">
                <%= f.label :confirmação_de_senha %><br>
                <%= f.password_field :password_confirmation, autocomplete: "off" %>
              </div>
              <br>
              <div class="field">
                <%= f.label :desenvolvedor %>
                <%= f.check_box :desenvolvedor, autofocus: true %>
              </div>

              <br>
              <div class="field">
                <%= f.label :senha_atual %><br>
                <%= f.password_field :current_password, autocomplete: "off" %><br />
                <i>(é preciso a senha atual para salvar as modificações)</i>
              </div>

              <br>

              <div class="actions">
                <%= f.submit "Atualizar", :class => "btn btn-primary btn-block" %>
              </div>
              <% end %>
              <hr>
              <h3 class="form-check-label">Deletar conta</h3>
              <hr>
                <p class="text-faded mb-5">Depois de deletada a conta não poderá ser recuperada!</p>
                <%= button_to "Apagar minha conta", registration_path(resource_name), data: { confirm: "Tem certeza?" }, method: :delete, :class => "btn btn-primary btn-xl js-scroll-trigger" %>
                <br>
              <a class="btn btn-primary btn-xl js-scroll-trigger" href="/">Voltar</a>
            </div>
          </div>
        </div>
      </body>
