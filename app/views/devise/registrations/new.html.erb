<div class="container">
    <%= devise_error_messages! %>
</div>
<div class="border-form-div card card-login mx-auto mt-5">
  <h2>Novo Usuário</h2>

  <div class="card-body">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.text_field :nome, :autofocus => true, :placeholder => 'Nome' %>
    <%= f.text_field :username, :autofocus => true, :placeholder => 'Username' %>
    <%= f.email_field :email, :autofocus => true, :placeholder => 'Email' %>
    <%= f.password_field :password, :placeholder => 'Senha' %>
    <%= f.password_field :password_confirmation, :placeholder => 'Confirmação de senha' %>

      <%= f.label :desenvolvedor %>  <%= f.check_box :desenvolvedor, autofocus: true %>
    <br>
    <br>
    <div class="actions">
      <%= f.submit "Cadastrar", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>
  <h3><%= link_to "Já tenho cadastro", login_path(@projeto), class: "d-block small mt-3 text-center"%></h3>
</div>
</div>
</body>
